<a id="open-car-size-finder">Find my car size</a>

<div id="car-size-finder-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Find Your Car Size</h2>
    <select id="brand-select">
      <option value="">Select Brand</option>
    </select>
    <select id="model-select" disabled>
      <option value="">Select Model</option>
    </select>
    <select id="year-select" disabled>
      <option value="">Select Year</option>
    </select>
    <div id="size-result"></div>
  </div>
</div>

<style>
  #open-car-size-finder{
    color: #e82276;
    padding-left: 5px;
    margin: 0 0px;
    width: max-content;
    cursor: pointer;
    text-decoration: underline;
}
.modal {
  display: none;
  position: fixed;
  z-index: 99999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0,0,0,0.4);
  margin: 0;
}

.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  max-width: 500px;
  border-radius: 5px;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

#car-size-finder-modal select {
  display: block;
  width: 100%;
  margin: 10px 0;
  padding: 5px;
}

#size-result {
  margin-top: 20px;
  font-weight: bold;
}
  @media (max-width: 767px) {
  .modal-content{
        margin: 75% auto;
  }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let carData = null;
  const modal = document.getElementById('car-size-finder-modal');
  const btn = document.getElementById('open-car-size-finder');
  const span = document.getElementsByClassName('close')[0];

  btn.onclick = function() {
    modal.style.display = 'block';
  }

  span.onclick = function() {
    modal.style.display = 'none';
  }

  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  }

  function populateSelect(selectId, options) {
    const select = document.getElementById(selectId);
    select.innerHTML = `<option value="">Select ${selectId.split('-')[0]}</option>`;
    options.sort((a, b) => a.localeCompare(b, undefined, { numeric: true, sensitivity: 'base' }));
    options.forEach(option => {
      const optionElement = document.createElement('option');
      optionElement.value = option;
      optionElement.textContent = option;
      select.appendChild(optionElement);
    });
    select.disabled = false;
  }

  function updateSizeResult(carInfo) {
    const sizeResult = document.getElementById('size-result');
    if (carInfo) {
      sizeResult.innerHTML = `
        <div class="result-item">
          <span class="result-label">Car Size:</span>
          <span class="result-value">${carInfo.size}</span>
        </div>
        <div class="result-item">
          <span class="result-label">Roof Type:</span>
          <span class="result-value">${carInfo.roof_type_tint || 'N/A'}</span>
        </div>
      `;
    } else {
      sizeResult.innerHTML = '';
    }
  }

  fetch('https://cdn.shopify.com/s/files/1/0234/7089/9277/files/car_tags_new.json?v=1770267418')
    .then(response => response.json())
    .then(data => {
      carData = data.brands;
      populateSelect('brand-select', Object.keys(carData));
    })
    .catch(error => console.error('Error loading car data:', error));

  document.getElementById('brand-select').addEventListener('change', function() {
    const brand = this.value;
    if (brand && carData[brand]) {
      populateSelect('model-select', Object.keys(carData[brand].models));
      document.getElementById('year-select').disabled = true;
      document.getElementById('year-select').innerHTML = '<option value="">Select year</option>';
      updateSizeResult(null);
    } else {
      document.getElementById('model-select').disabled = true;
      document.getElementById('model-select').innerHTML = '<option value="">Select model</option>';
      document.getElementById('year-select').disabled = true;
      document.getElementById('year-select').innerHTML = '<option value="">Select year</option>';
      updateSizeResult(null);
    }
  });

  document.getElementById('model-select').addEventListener('change', function() {
    const brand = document.getElementById('brand-select').value;
    const model = this.value;
    if (brand && model && carData[brand].models[model]) {
      populateSelect('year-select', Object.keys(carData[brand].models[model].years));
      updateSizeResult(null);
    } else {
      document.getElementById('year-select').disabled = true;
      document.getElementById('year-select').innerHTML = '<option value="">Select year</option>';
      updateSizeResult(null);
    }
  });

  document.getElementById('year-select').addEventListener('change', function() {
    const brand = document.getElementById('brand-select').value;
    const model = document.getElementById('model-select').value;
    const year = this.value;
    if (brand && model && year && carData[brand].models[model].years[year]) {
      const carInfo = carData[brand].models[model].years[year];
      updateSizeResult(carInfo);
    } else {
      updateSizeResult(null);
    }
  });
});
</script>
