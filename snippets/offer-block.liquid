<div id="overlay" class="overlay"></div>
<div id="myPopup" class="popup">
  <div class="popup-header">
    <h3>Terms & Conditions</h3>
    <span class="close1" onclick="closePopup()">&times;</span>
  </div>

  <div class="popup-content">
    <p>
      When you pay with VISA on Shopback app.
      <br>
      <b>Valid till 30 Sept 2024</b>
    </p>
  </div>
</div>
<style>
  .offer-block { display: grid; grid-gap: 10px; padding: 5px 0px; grid-template-columns: 1fr 1fr; overflow-x: auto; margin-bottom: 15px; }
  .get_off { background-color: #53c0e9;
    padding: 8px 15px;
    min-height: 72px;
    border-radius: 11px; }
  .get_off .get_off_img { display: flex; gap: 10px; align-items: center; margin-bottom: 10px }
  .get_off .get_off_img img{ height: 25px; display: block; }
  .get_off .get_off_img div { display: flex;
    align-items: center;
    background-color: #e82276;
    padding: 3px 15px 3px 5px;
    border-radius: 6px;}
  .get_off .get_off_img img { display: flex;
    align-items: center;
    width: 20px;
    height: 20px; }
  .get_off .get_off_img strong { font-size: 14px; line-height: 1; font-weight: bold; color: #fff; }
  .get_off .get_off_img span { font-weight: bold; color: #fff; font-size: 12px; line-height: 1; display: block; opacity: 0.9;white-space:nowrap;padding:5px;}
  .get_off p { color: #ba8a8a; line-height: 1; font-size: 14px; margin-bottom: 0; }
  .view_all { background-color: #f8f8f8; padding: 10px 12px; border-radius: 11px; margin-block: 3px; text-align: center; display: flex; flex-direction: column; justify-content: center; align-items: center; }
  .view_all strong { display: block; color: #fff; font-size: 14px; }
  .view_all a { text-decoration: underline; font-size: 12px; display: block; color: #fff !important; }
  .get_off_content{ font-size: 12px; line-height: 1.3; color: #fff; }
  .get_off_content.second{
          display: flex;
      justify-content: flex-end;
    }
    .terms{
      font-size: 11px !important;
    text-decoration: underline;
    font-weight: normal !important;
    cursor: pointer !important;
    padding-top: 5px;
    }
  .get_off_content span:first-child{ font-weight: 600;cursor: text; }
  .offer-modal{ position: fixed; top: 0; right: -100%; max-width: 400px; width: 100%; z-index: 999999; margin: 0; border-radius: 12px 0 0 12px; display: block; transition: all 0.3s ease-in-out; background-color:#fff; height:100%; }
  .modal-open:before{ content: ''; position: fixed; top: 0; right: 0; width: 100%; height: 100%; z-index: 99999; transition: all 0.3s ease-in-out; background-color: rgba(0,0,0,0.4); }
  .modal-content .offer-block{ display: flex; flex-direction: column; gap:16px }
  .offer-modal.is-visible{ right: 0; }
  .modal-header{ display: flex; align-items: center; gap:15px; padding: 16px; border-bottom: 1px solid #e5e7eb }
  .modal-header h2{ margin: 0; font-size: 18px; }
  .modal-close { margin: 0; padding: 0; background-color: transparent; display: flex; }
  .modal-content{ padding: 16px; }
  .modal-content > p{ font-size: 14px; margin-bottom:10px }

  .get_off.shopback{
    background: white;
    border: 2px solid #FF3100;
  }
  .get_off.shopback .get_off_img{
    margin-bottom:3px;
  }
  .get_off.shopback .get_off_img div{
    align-items: normal;
    background: transparent;
    padding: 3px 0;
  }
  .get_off.shopback .get_off_img img{
    width: 80px;
    height: auto;
  }
  .get_off.shopback .get_off_content span:first-child{
    color: #e82276;
  }

  .popup {
              display: none;
              position: fixed;
              top: 50%;
              left: 50%;
              transform: translate(-50%, -50%);
              background-color: #f1f1f1;
              padding: 20px;
              border-radius: 5px;
              box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
      z-index: 999999;
          }

          .popup-content {
              text-align: justify;
          }

          .close1 {
              color: #aaa;
              font-size: 28px;
              font-weight: bold;
              cursor: pointer;
          }
    .overlay {
              display: none;
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
              z-index: 999999;
          }
  .popup-header{
        display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 25px;
  }
    .popup-header h3{
          margin: 0;
      font-size: 20px;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    .popup-content p{
      font-size: 14px;
    }
  @media(max-width:767px){
    .offer-modal{
      max-width:351px
    }
    .popup{
        width:95%;
        top:35%;
      }
  }
</style>

<script>
  function showPopup() {
    document.getElementById("overlay").style.display = "block";
      document.getElementById("myPopup").style.display = "block";
  }

  function closePopup() {
    document.getElementById("overlay").style.display = "none";
      document.getElementById("myPopup").style.display = "none";
  }
</script>
