    <div class="popular-search">
      <div class="h3"><span>Popular Searches:</span></div>
      <ul class="popular-search-grid">
        <li class="p-cat">
          <a href="/collections/proton-car-mats">Proton</a>
        </li>
        <li class="p-cat">
          <a href="/collections/perodua-car-mats">Perodua</a>
        </li>
        <li class="p-cat">
          <a href="/collections/honda-car-mats">Honda</a>
        </li>
        <li class="p-cat">
          <a href="/collections/toyota-car-mats">Toyota</a>
        </li>
      </ul>
    </div>
  </div>
{% elsif collection.handle == 'car-wipers' %}
  <div class="one-whole column">
    <div class="popular-search">
      <div class="h3"><span>Popular Searches:</span></div>
      <ul class="popular-search-grid">
        <li class="p-cat">
          <a href="/collections/proton-car-wipers">Proton</a>
        </li>
        <li class="p-cat">
          <a href="/collections/perodua-car-wipers">Perodua</a>
        </li>
