{% assign is_in_okendo_collection = false %}

{% for collection in product.collections %}
    {% if collection.title contains 'okendo_' %}
        {% assign is_in_okendo_collection = true %}
        {% assign oke_collection_id = collection.id %}
        {% break %}
    {% endif %}
{% endfor %}

{% if is_in_okendo_collection == true %}
    <div class="okeReviews-widget-holder" data-oke-reviews-widget-holder data-oke-reviews-collection-id="{{ oke_collection_id }}">
      <div data-oke-reviews-nav-bar></div>
      <div data-oke-reviews-widget data-oke-reviews-write-review-product-id="shopify-{{ product.id }}"></div>
      <div data-oke-reviews-qanda data-oke-reviews-ask-question-product-id="shopify-{{ product.id }}"></div>
	</div>
{% else %}
  <div class="okeReviews-widget-holder" data-oke-reviews-widget-holder data-oke-reviews-product-id="shopify-{{ product.id }}">
    <div data-oke-reviews-nav-bar></div>
    <div data-oke-reviews-widget>{{ product.metafields.okendo.ProductReviewsWidgetSnippet }}</div>
    <div data-oke-reviews-qanda></div>
  </div>
{% endif %}
