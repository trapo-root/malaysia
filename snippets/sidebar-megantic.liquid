{% assign menuhandle = collection.handle %}
{% if linklists[menuhandle].links == empty %}
  <style>
    .gf-option-87450{
      display:none!imoportant;
    }
  </style>
{% else %}
  <div class="gf-option-block gf-option-87450 gf-option-block-checkbox capitalize">
    <div class="gf-block-title">
      <div class="h3"><span>Popular Searches </span></div>
    </div>
    <div class=" gf-block-content">
      <div class="gf-scroll">
        <ul class="gf-option-box" id="scrollbar3">
          {% for link in linklists[menuhandle].links %}
            <li>
              <a class="a-meg" onclick="removeFilter({{filter.id}})" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endif %}

