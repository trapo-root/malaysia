<section class="section announcement">
  <div class="container announcement-banner center">
    <div class="one-whole column">
      {% if product.type == 'TRAPO CLASSIC REAR'
        or product.type == 'TRAPO HEX REAR'
        or product.type == 'TRAPO ECO REAR'
      %}
        <a href="/pages/complete-your-set">
          <img
            class="lazyload header-announcement-banner"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/minibanner_desktop.jpg?v=1714383722"
            alt="Loyalty Program"
            width="100%"
            loading="lazy"
          >
        </a>
        <a href="/pages/complete-your-set">
          <img
            class="lazyload header-announcement-banner-m"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/minibanner_mobile.jpg?v=1714383736g"
            alt="Loyalty Program"
            width="100%"
            loading="lazy"
          >
        </a>
      {% elsif page.handle == 'spin-the-wheel'
        or page.handle == 'claim-your-prize'
        or page.handle == 'fill-in-form'
        or page.handle == 'submission-success'
      %}
        <a href="#">
          <img
            class="lazyload header-announcement-banner"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/header_-_desktop_-_1940x180_ad8ed712-6dc0-4376-99c2-bd539bda7bc7.png?v=1747195935"
            alt="Spin the Wheel"
            width="100%"
            loading="lazy"
          >
        </a>
        <a href="#">
          <img
            class="lazyload header-announcement-banner-m"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/header_-_mobile_-_568x213_bf174bee-34b4-4441-8a21-3bc127d50c9c.png?v=1747195935"
            alt="Spin the Wheel"
            width="100%"
            loading="lazy"
          >
        </a>
      {% elsif product.tags contains 'scented-stone' %}

        <a href="/pages/setthetone">
          <img
            class="lazyload header-announcement-banner"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/Quiz-Shop-Banner-Desktop.jpg?v=1754270107"
            alt="Scented Stone"
            width="100%"
            loading="lazy"
          >
        </a>
        <a href="/pages/setthetone">
          <img
            class="lazyload header-announcement-banner-m"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/Quiz-Shop-Banner-Mobile.jpg?v=1754270113"
            alt="Scented Stone"
            width="100%"
            loading="lazy"
          >
        </a>

      {% else %}
        <a href="/collections/clearance">
          <img
            class="lazyload header-announcement-banner"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/Mid_Year_Clearance_June__Dekstop-StripBanner-1940x180.jpg?v=1750409441"
            alt="Loyalty"
            width="100%"
            loading="lazy"
          >
        </a>
        <a href="/collections/clearance">
          <img
            class="lazyload header-announcement-banner-m"
            data-src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/Mid_Year_Clearance_June__Mobile-StripBanner-600x150.jpg?v=1750409447"
            alt="Loyalty"
            width="100%"
            loading="lazy"
          >
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .announcement-banner {
  	padding: 20px 0;
  }

  .header-announcement-banner {
  	display: block;
  }

  .header-announcement-banner-m {
  	display: none;
  }

  @media(max-width: 768px) {
  	div.container {
  		padding: 0px 0px;
  	}

  	.header-announcement-banner {
  		display: none;
  	}

  	.header-announcement-banner-m {
  		display: block;
  		margin-top: 2.5rem;
  	}
  }

  @media(max-width: 500px) {
  	.header-announcement-banner-m {
  		display: block;
  		margin-top: 0rem;
  	}
  }
</style>
