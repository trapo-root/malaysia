        .sec_header_2 .title:before {
            height: 45px;
            content: '';
            position: absolute;
            width: 100%;
            left: 0;
            top: 0;
            background-image: url(https://cdn.shopify.com/s/files/1/0234/7089/9277/files/title_bg.svg?v=1725982901);
            z-index: -1;
