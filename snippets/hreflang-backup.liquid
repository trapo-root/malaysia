        <link rel="alternate" hreflang="en-NZ" href="https://shop.trapo.com/en-nz{{  product.url }}" />
        <link rel="alternate" hreflang="en-AE" href="https://shop.trapo.com/en-uae{{  product.url }}" />
      {% endif %}
    {% endif %}
 
