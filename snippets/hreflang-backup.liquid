    {% if handle contains 'collections' %}
      {% if collection.template_suffix != 'only-my' %}
      <!-- Collections Hreflang   -->
        <link rel="alternate" hreflang="en-MY" href="https://my.trapo.asia{{ collection.url }}">
        <link rel="alternate" hreflang="x-default" href="https://my.trapo.asia{{ collection.url }}">
