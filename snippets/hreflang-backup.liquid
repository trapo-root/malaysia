        <link rel="alternate" hreflang="en-AE" href="https://shop.trapo.com/en-uae{{  collection.url }}" />
      {% endif %}
    {% endif %}
    {% if handle contains 'products' %}
      {% if product.tags != 'only-malaysia' %}
      <!-- Product page Hreflang   -->
        <link rel="alternate" hreflang="en-MY" href="https://my.trapo.asia{{ product.url }}">
        <link rel="alternate" hreflang="x-default" href="https://my.trapo.asia{{ product.url }}">
        <link rel="alternate" hreflang="en-SG" href="https://sg.trapo.asia{{ product.url }}" /> 
