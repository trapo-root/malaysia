            });
        });

        document.getElementById('hubToClaim').addEventListener('change', function() {
            validateField('hubToClaim', 'hubError', {
                required: true,
                requiredMsg: validationMessages.hub.required
            });
        });

        document.getElementById('requestedDate').addEventListener('change', function() {
            const value = this.value;
            if (!value) {
                showError('requestedDate', 'dateError', validationMessages.date.required);
                return;
            }
            const selectedDate = new Date(value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            if (selectedDate < today) {
                showError('requestedDate', 'dateError', validationMessages.date.invalid);
            } else {
                clearError('requestedDate', 'dateError');
            }
        });

        // Radio button validation
        document.querySelectorAll('input[name="Requested Appointment time"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelector('.zt-radio-group').classList.remove('zt-error');
                document.getElementById('timeError').style.display = 'none';
            });
        });

        // Form submit validation
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Hide any previous error
            errorMessage.style.display = 'none';
            clearAllErrors();

            let isValid = true;

            // Validate Name
            if (!validateField('name', 'nameError', {
                required: true,
                requiredMsg: validationMessages.name.required,
                minLength: 2,
                invalidMsg: validationMessages.name.invalid
            })) isValid = false;

            // Validate Contact
            const contactVal = document.getElementById('contact').value.replace(/[\s-]/g, '');
            if (!contactVal) {
                showError('contact', 'contactError', validationMessages.contact.required);
                isValid = false;
            } else if (!/^[0-9]{8,15}$/.test(contactVal)) {
                showError('contact', 'contactError', validationMessages.contact.invalid);
                isValid = false;
            }

            // Validate Email
            if (!validateField('email', 'emailError', {
                required: true,
                requiredMsg: validationMessages.email.required,
                pattern: /^[^\s@]+@[^\s@]+\.[^\s@]+$/,
                invalidMsg: validationMessages.email.invalid
            })) isValid = false;

            // Validate Car Plate
            if (!validateField('carPlate', 'carPlateError', {
                required: true,
                requiredMsg: validationMessages.carPlate.required,
                minLength: 2,
                invalidMsg: validationMessages.carPlate.invalid
            })) isValid = false;

            // Validate Car Model
            if (!validateField('carModel', 'carModelError', {
                required: true,
                requiredMsg: validationMessages.carModel.required
            })) isValid = false;

            // Validate Dealership
            if (!validateField('dealership', 'dealershipError', {
                required: true,
                requiredMsg: validationMessages.dealership.required
            })) isValid = false;

            // Validate Hub
            if (!validateField('hubToClaim', 'hubError', {
                required: true,
                requiredMsg: validationMessages.hub.required
            })) isValid = false;

            // Validate Date
            const dateVal = document.getElementById('requestedDate').value;
            if (!dateVal) {
                showError('requestedDate', 'dateError', validationMessages.date.required);
                isValid = false;
            } else {
                const selectedDate = new Date(dateVal);
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                if (selectedDate < today) {
                    showError('requestedDate', 'dateError', validationMessages.date.invalid);
                    isValid = false;
                }
            }

            // Validate Appointment Time
            const appointmentTime = document.querySelector('input[name="Requested Appointment time"]:checked');
            if (!appointmentTime) {
                document.querySelector('.zt-radio-group').classList.add('zt-error');
                document.getElementById('timeError').textContent = validationMessages.time.required;
                document.getElementById('timeError').style.display = 'block';
                isValid = false;
            }

            if (!isValid) {
                errorMessage.textContent = 'Please fill in all required fields correctly.';
                errorMessage.style.display = 'block';
                document.querySelector('.zt-error')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                return;
            }
            
            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="zt-loading-spinner"></span>Submitting...';

            // Collect form data
            const formData = {
                name: document.getElementById('name').value.trim(),
                dialCode: document.getElementById('dialCode').value,
                contact: document.getElementById('contact').value.trim(),
                email: document.getElementById('email').value.trim(),
                carPlate: document.getElementById('carPlate').value.trim(),
                carModel: document.getElementById('carModel').value,
                dealership: document.getElementById('dealership').value,
                hubToClaim: document.getElementById('hubToClaim').value,
                requestedDate: document.getElementById('requestedDate').value,
                appointmentTime: appointmentTime ? appointmentTime.value : ''
            };

            try {
                // Send data to PHP script via AJAX
                const response = await fetch(SUBMIT_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    // Show success message
                    formContainer.style.display = 'none';
                    successMessage.style.display = 'block';
                } else {
                    // Show error message
                    errorMessage.textContent = result.message || 'Something went wrong. Please try again later.';
                    errorMessage.style.display = 'block';
                    
                    // Reset button
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'SUBMIT';
                }

            } catch (error) {
                console.error('Error:', error);
                errorMessage.textContent = 'Something went wrong. Please try again later.';
                errorMessage.style.display = 'block';
                
                // Reset button
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'SUBMIT';
            }
        });
    </script>