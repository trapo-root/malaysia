        // Show error message
        function showError(fieldId, errorId, message) {
            const field = document.getElementById(fieldId);
            const errorEl = document.getElementById(errorId);
            field.classList.add('zt-error');
            errorEl.textContent = message;
            errorEl.style.display = 'block';
        }

        // Clear error message
        function clearError(fieldId, errorId) {
            const field = document.getElementById(fieldId);
            const errorEl = document.getElementById(errorId);
            field.classList.remove('zt-error');
            errorEl.textContent = '';
            errorEl.style.display = 'none';
        }

        // Clear all errors
        function clearAllErrors() {
            document.querySelectorAll('.zt-form-input, .zt-form-select').forEach(el => el.classList.remove('zt-error'));
            document.querySelectorAll('.zt-field-error').forEach(el => {
                el.textContent = '';
                el.style.display = 'none';
            });
            document.querySelector('.zt-radio-group')?.classList.remove('zt-error');
        }

        // Validation functions
        function validateField(fieldId, errorId, validations) {
            const field = document.getElementById(fieldId);
            const value = field.value.trim();

            if (validations.required && !value) {
                showError(fieldId, errorId, validations.requiredMsg);
                return false;
            }

            if (validations.pattern && value && !validations.pattern.test(value)) {
                showError(fieldId, errorId, validations.invalidMsg);
                return false;
            }

            if (validations.minLength && value.length < validations.minLength) {
                showError(fieldId, errorId, validations.invalidMsg);
                return false;
            }

            if (validations.custom && !validations.custom(value)) {
                showError(fieldId, errorId, validations.invalidMsg);
                return false;
            }

            clearError(fieldId, errorId);
            return true;
        }

        // Real-time validation on blur/change
        document.getElementById('name').addEventListener('blur', function() {
            validateField('name', 'nameError', {
                required: true,
                requiredMsg: validationMessages.name.required,
                minLength: 2,
                invalidMsg: validationMessages.name.invalid
            });
        });

        document.getElementById('contact').addEventListener('blur', function() {
            validateField('contact', 'contactError', {
                required: true,
                requiredMsg: validationMessages.contact.required,
                pattern: /^[0-9]{8,15}$/,
                invalidMsg: validationMessages.contact.invalid,
                custom: (val) => /^[0-9]{8,15}$/.test(val.replace(/[\s-]/g, ''))
