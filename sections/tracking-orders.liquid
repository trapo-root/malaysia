<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{{ 'tracking-style.css' | asset_url | stylesheet_tag }}
<div class="order-tracking-container">
        <div class="order-header">
            <h1>Track Your Order</h1>
        </div>

        <section class="tracking-form">
            <form id="trackingForm">
                <div class="form-group" style="display: flex;">
                    <input type="text" id="orderNumber" name="orderNumber"
                        placeholder="Enter Shopify Order name or Tracking number" required>
                    <button type="submit" class="track-button">Track</button>
                </div>
                <div class="tracking-feedback" id="trackingFeedback">
                    Connecting to tracking server...
                </div>

            </form>
        </section>

        <section class="tracking-status" id="trackingStatus" style="display:none;">
            <!-- <h2>Order Status</h2> -->
            <div class="current-status" id="currentStatusDisplay">Current Status: <span id="statusText"></span></div>
            <div class="status-steps-container">
                <div class="status-line-container">
                    <div class="status-line-bg"></div>
                    <div class="status-line" id="statusLine"></div>
                </div>
                <div class="status-step" data-step="1" data-always-show="true">
                    <div class="status-icon"><i class="fas fa-shopping-cart"></i></div>
                    <div class="status-label">Ordered</div>
                </div>
                <div class="status-step" data-step="2" data-always-show="true">
                    <div class="status-icon"><i class="fas fa-shipping-fast"></i></div>
                    <div class="status-label">Shipped Out</div>
                </div>
                <div class="status-step" data-step="3" data-always-show="true">
                    <div class="status-icon"><i class="fas fa-route"></i></div>
                    <div class="status-label">Out for Delivery</div>
                </div>
                <div class="status-step" data-step="4" data-always-show="true">
                    <div class="status-icon"><i class="fas fa-home"></i></div>
                    <div class="status-label">Delivered</div>
                </div>
            </div>

            <div class="order-details" id="orderDetails">
                <div class="detail-item">
                    <span class="detail-label">Tracking Number:</span>
                    <span id="trackingNumberDisplay" class="detail-value"></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Courier:</span>
                    <span id="warehouse_display" class="detail-value">Not Assigned</span>
                </div>

            </div>

            <div class="detailed-timeline" id="detailedTimeline">
                <h3>Detailed Timeline</h3>
                <div class="loader" id="timelineLoader" style="display: none;">
                    <div class="loader-spinner"></div>
                </div>
                <ul id="timelineStepsDetailed">
                </ul>
            </div>
        </section>
    </div>
<script src="{{ 'tracking.js' | asset_url }}" defer></script>
{% schema %}
{
  "name": "Tracking Orders",
  "settings": []
}
{% endschema %}
