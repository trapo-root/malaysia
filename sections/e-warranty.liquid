<script>
function setOrderIdWhenReady() {
    const urlParams = new URLSearchParams(window.location.search);
    const orderValue = urlParams.get('orderid');
    if (!orderValue) return;

    // Poll for the textbox every 100ms
    const interval = setInterval(() => {
        const textBox = document.querySelector('#textbox-4') || 
                        document.querySelector('input[type="text"]');
        if (textBox) {
            textBox.value = orderValue;
            console.log('query string value appended to text box');
            clearInterval(interval);
        }
    }, 100);
}
// Run when DOM is ready
document.addEventListener('DOMContentLoaded', setOrderIdWhenReady);
</script>
