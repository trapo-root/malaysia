<style>
  /* Base Styles */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Image aspect ratio container */
  .img {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Marquee Animation */
  .marquee {
    overflow: hidden;
    position: relative;
    height: 80px;
    margin-bottom: 50px;
  }

  .marquee div {
    display: flex;
    width: 200%;
    position: absolute;
    animation: marquee 20s linear infinite;
  }

  .marquee img {
    width: 400px;
    height: 80px;
    object-fit: contain;
  }

  @keyframes marquee {
    0% { left: 0; }
    100% { left: -100%; }
  }

  /* Full Range Section */
  .full_range {
    padding: 60px 0;
    background: #f8f8f8;
  }

  .full_range_content {
    display: grid;
    gap: 30px;
  }

  .full_range_content .inside_wrap {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .full_range_content .inside_wrap_2 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .full_range_content .item {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .full_range_content .item:hover {
    transform: translateY(-5px);
  }

  .full_range_content .inside_wrap .img {
    aspect-ratio: 4/3;
  }

  .full_range_content .inside_wrap_2 .img {
